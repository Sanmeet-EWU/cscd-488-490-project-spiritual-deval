@page "/contact"
<PageTitle>Contact</PageTitle>

<h1 class="header-text">Contact Us</h1>

<p class="intro-text">If you have any questions or inquiries, please reach out to us by filling out the form below. Weâ€™d love to hear from you!</p>

<form>
    <!-- Name -->
    <div class="input-group">
        <label for="name">Name:</label>
        <input type="text" id="name" placeholder="Enter your name" />
    </div>

    <!-- Email -->
    <div class="input-group">
        <label for="email">Email Address:</label>
        <input type="email" id="email" placeholder="Enter your email address" />
    </div>

    <!-- Message -->
    <div class="input-group">
        <label for="message">Message:</label>
        <textarea id="message" placeholder="Write your message here"></textarea>
    </div>

    <!-- Submit Button -->
    <div class="input-group">
        <button type="submit">Send Message</button>
    </div>
</form>

<style>
    .header-text {
        text-align: center;
        font-size: 2.5em;
        color: #556b2f; /* Olive green */
        font-family: 'Georgia', 'Times New Roman', serif;
        margin: 50px 0 20px;
    }

    .intro-text {
        text-align: center;
        margin: 0 0 30px 0;
        font-size: 1.2em;
        color: #4f7c5d; /* Slightly darker olive green */
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 600px;
        margin: 0 auto; /* Center form horizontally */
    }

    .input-group {
        width: 100%;
        margin-bottom: 20px; /* Increased margin for more spacing */
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 8px; /* Increased spacing between label and input */
        color: #4f7c5d; /* Dark olive green for text */
    }

    input, select, textarea, button {
        width: 100%;
        font-size: 1em;
        box-sizing: border-box;
        padding: 12px; /* Added padding for better visual appeal */
        border-radius: 5px; /* Rounded corners for inputs and buttons */
        border: 2px solid #4f7c5d; /* Dark olive green borders */
    }

    input, select {
        height: 45px; /* Slightly taller inputs */
    }

    textarea {
        height: 150px; /* Larger message box */
        padding: 10px; /* Padding for textarea */
    }

    button {
        background-color: #3e8e41; /* Olive green */
        color: white;
        cursor: pointer;
        height: 50px;
        font-size: 1.1em; /* Slightly larger button text */
        transition: background-color 0.3s ease;
    }

    button:focus {
        outline: none;
        border-color: #3e654a; /* Darker green focus outline */
    }

    /* Override text color for Name, Email, and Message to black */
    input, textarea {
        color: black; /* Set text color inside input and textarea to black */
    }
</style>
