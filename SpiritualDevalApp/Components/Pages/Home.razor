@page "/"
@using Microsoft.EntityFrameworkCore
@using SpiritualDevalApp.Data
@using SpiritualDevalApp.Models.Entities
@using System.Security.Policy
@inject AppDbContext DbContext

@code {
    private IEnumerable<Event>? Events;

    protected override async Task OnInitializedAsync()
    {
        Events = await DbContext.Events.ToListAsync();
    }
}

<PageTitle>Home</PageTitle>

<div class="container">
    <div class="content">
        <div class="text-and-icons">
            <h1>Spiritual Deval</h1>
            <p>A sanctuary of peace, reflection, and spiritual growth.</p>
            <div class="social-icons">
                <a href="https://facebook.com" target="_blank">
                    <img src="/icons/Facebook_Logo_Primary.png" alt="Facebook" />
                </a>
                <a href="https://twitter.com" target="_blank">
                    <img src="/icons/logo-black.png" alt="X" />
                </a>
                <a href="https://instagram.com" target="_blank">
                    <img src="/icons/Instagram_Glyph_Gradient.png" alt="Instagram" />
                </a>
            </div>
        </div>
        <div class="image">
            <img src="https://assets.editorial.aetnd.com/uploads/2011/06/taj-mahal-gettyimages-463924915.jpg" alt="Placeholder Image" />
        </div>
    </div>
</div>

<!-- Upcoming Events Section -->
<div class="upcoming-events">
    <h2>Upcoming Events</h2>
    @if (Events != null && Events.Any())
    {
        foreach (var eventItem in Events)
        {
            <div class="event-card">
                <div class="event-header">
                    <span class="event-title">@eventItem.EventTitle</span>
                    <span class="event-date">@eventItem.EventDate.ToString("MM/dd/yyyy")</span>
                </div>
                <p class="event-description">
                    @eventItem.EventDescription
                </p>
                <div class="event-actions">
                    <button class="btn-volunteer">Volunteer</button>
                    <button class="btn-register">Register</button>
                </div>
            </div>
        }
    }
    else
    {
        <p>No upcoming events.</p>
    }
</div>

