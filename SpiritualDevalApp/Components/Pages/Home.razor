@page "/"
@using Microsoft.EntityFrameworkCore
@using SpiritualDevalApp.Data
@using SpiritualDevalApp.Models.Entities
@using System.Security.Policy
@inject AppDbContext DbContext

@code {
    private IEnumerable<Event>? Events;

    protected override async Task OnInitializedAsync()
    {
        Events = await DbContext.Events.ToListAsync();
    }
}

<PageTitle>Home</PageTitle>

<!-- Main Container -->
<div class="main-container">
    <!-- Header Section with Image -->
    <header class="header">
        <img src="https://wallpaperaccess.com/full/1274112.jpg" alt="Temple" class="header-image" />
        <div class="header-overlay">
            <h1>Spiritual Deval</h1>
            <p>A sanctuary of peace, reflection, and spiritual growth.</p>
        </div>
    </header>

    <!-- Content Section -->
    <div class="content-container">
        <section class="intro">
            <h2>Welcome to Our Spiritual Sanctuary</h2>
            <p>At Spiritual Deval, we offer a peaceful environment where you can embark on your spiritual journey, reflect, and connect with your higher self. Our teachings and practices are centered around mindfulness, inner peace, and personal growth.</p>
        </section>


        <!-- Upcoming Events Section -->
        <section class="events">
            <h2>Upcoming Events</h2>
            @if (Events != null && Events.Any(e => e.EventDate >= DateTime.Today))
            {
                foreach (var eventItem in Events.Where(e => e.EventDate >= DateTime.Today))
                {
                    <div class="event-item">
                        <h3>@eventItem.EventTitle</h3>
                        <p><strong>Date:</strong> @eventItem.EventDate.ToString("MMMM d, yyyy")</p>
                        <p>@eventItem.EventDescription</p>
                        <button class="cta-button" onclick="location.href='/register/@eventItem.EventId'">Register</button>
                        <a href="#" class="cta-button">Volunteer</a>
                    </div>
                }
            }
            else
            {
                <p>No upcoming events.</p>
            }
        </section>

        <!-- Past Events Section -->
        <section class="events">
            <h2>Past Events</h2>
            @if (Events != null && Events.Any(e => e.EventDate < DateTime.Today))
            {
                foreach (var eventItem in Events.Where(e => e.EventDate < DateTime.Today))
                {
                    <div class="event-item">
                        <h3>@eventItem.EventTitle</h3>
                        <p><strong>Date:</strong> @eventItem.EventDate.ToString("MMMM d, yyyy")</p>
                        <p>@eventItem.EventDescription</p>
                        <a href="#" class="cta-button">Register</a>
                        <a href="#" class="cta-button">Volunteer</a>
                    </div>
                }
            }
            else
            {
                <p>No upcoming events.</p>
            }
        </section>

        <!-- Social Media Section -->
        <section class="social-media">
            <h3>Connect with Us</h3>
            <div class="social-icons">
                <a href="https://facebook.com" target="_blank">
                    <img src="/icons/Facebook_Logo_Primary.png" alt="Facebook" />
                </a>
                <a href="https://twitter.com" target="_blank">
                    <img src="/icons/logo-black.png" alt="X" />
                </a>
                <a href="https://instagram.com" target="_blank">
                    <img src="/icons/Instagram_Glyph_Gradient.png" alt="Instagram" />
                </a>
            </div>
        </section>

        <!-- Footer Section -->
        <footer class="footer">
            <p>&copy; 2025 Spiritual Deval. All rights reserved.</p>
        </footer>
    </div>
</div>


<!-- CSS Styles -->
<style>
    /* Reset some default styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
    }

    .main-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    /* Header Section */
    .header {
        position: relative;
        width: 100%;
        height: 250px; /* Adjusted the height of the header */
        color: white;
        text-align: center;
    }

    .header-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.6;
    }

    .header-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: rgba(0, 0, 0, 0.4);
        padding: 20px;
    }

    .header h1 {
        font-size: 3rem;
        margin-bottom: 10px;
        color: #a2d9a2; /* Lighter green for the title */
    }

    .header p {
        font-size: 1.2rem;
        color: #e2f5e2; /* Soft green for description */
    }

    /* Content Section */
    .content-container {
        width: 100%; /* Full width of the page */
        padding: 40px 20px; /* Add more space around content */
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .intro h2 {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: #3e8e41; /* Darker green for section titles */
    }

    .intro p {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 30px;
        color: #333;
    }

    /* Events Section */
    .events {
        margin-top: 40px;
    }

    .events h2 {
        font-size: 2.5rem;
        color: #3e8e41; /* Darker green for event titles */
        margin-bottom: 20px;
    }

    .event-item {
        background-color: #f1f1f1;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .event-item h3 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 10px;
    }

    .event-item p {
        font-size: 1rem;
        color: #555;
    }

    .cta-button {
        background-color: #3e8e41; /* Green button */
        color: white;
        padding: 10px 20px;
        border-radius: 0; /* Sharp edges for button */
        text-decoration: none;
        text-transform: uppercase;
        font-weight: bold;
        display: inline-block;
        margin-top: 10px;
        margin-right: 10px;
    }

    .cta-button:hover {
        background-color: #2c6c2d; /* Darker green on hover */
    }

    /* Social Media Section */
    .social-media {
        text-align: center;
        margin-top: 30px;
    }

    .social-icons a {
        margin: 0 10px;
        display: inline-block;
    }

    .social-icons img {
        width: 40px;
        height: 40px;
        transition: transform 0.3s ease;
    }

    .social-icons img:hover {
        transform: scale(1.1);
    }

    /* Footer Section */
    .footer {
        margin-top: 50px;
        text-align: center;
        padding: 10px;
        background-color: #3e8e41; /* Green background */
        color: white;
    }
</style>