@page "/Login"
@layout MainLayout
@rendermode InteractiveServer
<PageTitle>Login</PageTitle>

<div class="login-container">
    <div class="login-box">
        <h2>Login</h2>
        <EditForm Model="loginUser" OnValidSubmit="HandleValidSubmit">
            <div class="form-group">
                <label for="emailInput">Email:</label>
                <InputText id="emailInput" @bind-Value="loginUser.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="passwordInput">Password:</label>
                <InputText id="passwordInput" @bind-Value="loginUser.Password" class="form-control" type="password" />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </EditForm>
        <p class="create-account-link">
            Don't have an account? <NavLink href="/CreateAccount">Create one here</NavLink>.
        </p>
    </div>
</div>

@code {
    private class LoginUser
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }

    private LoginUser loginUser = new LoginUser();

    private void HandleValidSubmit()
    {
        Console.WriteLine($"Login submitted: Email: {loginUser.Email}, Password: {loginUser.Password}");
    }
}